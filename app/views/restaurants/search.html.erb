<h1>Search Restaurants</h1>
<p>Find me in app/views/restaurants/search.html.erb</p>

<%= form_tag :restaurants_search, method: "get" do %>
	<%= text_field_tag :search %>
	<%= submit_tag "Buscar" %>
<% end %>

<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Category</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
	  <% @restaurants.each do |r| %>
		<tr>
			<td><%= r["name"] %></td>
			<td><%= r["categories"][0]["name"] %></td>
			<td>
				<%= form_tag restaurants_create_favorite_path, method: "post", remote: true do %>
					<%= hidden_field_tag :name, r["name"] %>
					<%= hidden_field_tag :category, r["categories"][0]["name"] %>
					<%= submit_tag "AÃ±adir a favoritos" %>
				<% end %>
			</td>
		</tr>
	  <% end %>
	</tbody>
</table>
